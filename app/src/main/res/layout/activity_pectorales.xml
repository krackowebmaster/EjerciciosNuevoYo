<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"

    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnRegresar"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/btn_regresar_3x" />
        <TextView
            android:id="@+id/txtTituloMuscular"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Ejercicios"
            android:textColor="@color/nuevoyo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_weight="8"
            />
        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/btn_mihome"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <LinearLayout
            android:id="@+id/vistaGrupoMuscular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="16dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3.5"
                >
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="90dp"
                    android:layout_height="77dp"
                    android:layout_marginEnd="120dp"
                    app:srcCompat="@drawable/logo_novo_3x"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="4dp"
                    android:fontFamily="sans-serif"
                    android:text="No. Reg. Sanitario: 096M2019 SSA \nNo. de Aviso: 213300202C2987\nCÃ³digo Interno: MX21OZM00027\nPublicidad exclusiva para profesionales de la salud"
                    android:textColor="#77787b"
                    android:textSize="11sp"
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>