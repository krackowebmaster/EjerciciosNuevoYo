<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstruccionesGenerales">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnRegresar"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/btn_regresar_3x" />
        <TextView
            android:id="@+id/textViewotro"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Instrucciones\ngenerales"
            android:textColor="@color/nuevoyo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_weight="8"
            />
        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/btn_mihome"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="32dp"
        android:text="Video: ¿en qué consiste el ejercicio
aeróbico? ¿Qué beneficios nos brinda?
¿Qué opciones existen y cuál
es la manera correcta de realizarlo?
Todo esto, además de algunas
consideraciones importantes a tomar
en cuenta, podrás encontrar en este
video que hemos preparado para ti."
        android:textColor="#77787b"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <ImageView
        android:id="@+id/videoInstrucciones1"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@drawable/btn_play_3x" />

    <ImageView
        android:id="@+id/videoInstrucciones2"
        android:layout_width="64dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@drawable/btn_play_3x" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="32dp"
        android:text="Video: el ejercicio de fuerza ofrece
múltiples beneficios, sin embargo,
debemos realizarlo observando algunas
recomendaciones para no lastimarnos.
En el siguiente video conocerás
su importancia, la forma en que
mejora nuestra salud física y mental,
además de consejos para realizarlo
con eficacia y seguridad."
        android:textColor="#77787b"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoInstrucciones1"
        app:layout_constraintVertical_bias="0.04" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_novo_3x" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif"
        android:text="No. Reg. Sanitario: 096M2019 SSA \nNo. de Aviso: 213300202C2987\nCódigo Interno: MX21OZM00027\nPublicidad exclusiva para profesionales de la salud"
        android:textColor="#77787b"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>