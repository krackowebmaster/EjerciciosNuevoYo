<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntegracionAerobicoFuerza">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnRegresar"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/btn_regresar_3x" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Integraci贸n\naer贸bico y fuerza"
            android:textColor="@color/nuevoyo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_weight="8"
            />
        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/btn_mihome"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewOtro"
        android:layout_width="183dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:text="Su tiempo actual de ejercicio aer贸bico:"
        android:textColor="#77787b"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guiaMedia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14" />

    <EditText
        android:id="@+id/txtMinutosSemana"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="000"
        android:layout_marginEnd="16dp"
        android:textColor="@color/nuevoyo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/bordes_campos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guiaMedia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <ImageView
        android:id="@+id/btnVerDocI"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOtro"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/btn_ver_3x" />

    <ImageView
        android:id="@+id/enviarMailDocI"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnVerDocI"
        app:layout_constraintTop_toBottomOf="@+id/textViewOtro"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/btn_enviar_3x" />

    <ImageView
        android:id="@+id/btnDescargaDocI"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/enviarMailDocI"
        app:layout_constraintTop_toBottomOf="@+id/textViewOtro"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/btn_descargar_3x" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="77dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guiaMedia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_novo_3x" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:fontFamily="sans-serif"
        android:text="No. Reg. Sanitario: 096M2019 SSA \nNo. de Aviso: 213300202C2987\nC贸digo Interno: MX21OZM00027\nPublicidad exclusiva para profesionales de la salud"
        android:textColor="#77787b"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>